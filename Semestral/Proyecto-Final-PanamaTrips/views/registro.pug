extends basic.pug
block header
    link(rel="stylesheet", href="/css/registro.css")
block content
    .container.mt-3
        .row
            div(class='d-none d-lg-block col-lg-12 mb-2')
                h3 ¡Se parte de nuestra comunidad de viajeros!
            div(class='d-block d-lg-none d-xl-none col-sm-12 mb-2')
                h5 ¡Se parte de nuestra comunidad de viajeros!
            div(class='d-none d-lg-block col-lg-4 col-xl-3')
                img(src="/css/logo.png", alt="logo", height="250", width='100%', class='mb-2 rounded-circle shadow')
                img(src="/css/bocas-toro-panama.jpg", alt="ImagenIlustrativa", height="250", width='100%', class='rounded-circle shadow')
            div(class='col-sm-12 col-md-12 col-lg-8 col-xl-8')
                .card.shadow-lg.mb-3
                    .card-header
                        span(class='fa fa-users fa-1x')  ¡Registrate y se parte de PanamaTrips!
                    .card-body
                        .container
                            .row
                                //img(class='col-sm-1', src="/css/logo.png", alt="Logo", width="100%",  height="50px")  
                                div(class='d-none d-lg-block col-lg-12')
                                    h3 ¡PanamaTrips!
                                    hr.divisor
                                div(class='d-block d-lg-none d-xl-none col-sm-12')
                                    h6 ¡PanamaTrips!
                                    hr.divisor
                                if hasErrors
                                    .alert.alert-danger
                                        each lista in messages
                                         p #{lista}
                                .col-sm-12
                                    form(action="/registrar", method='post', enctype="multipart/form-data")
                                        h5 Imagen de perfil:
                                        div(class='form-group row') 
                                            label(class='col-sm-7 col-form-label') Seleccione su imagen de perfil:
                                            .col-sm-5
                                                input#subirimagen(type='file', name='imagen')
                                                p.text-success(id='buenArchivo')
                                                p.text-danger(id='malArchivo')  
                                        hr.divisor
                                        h5 Información Personal:
                                        div(class='form-group row') 
                                            label(class='col-sm-2 col-form-label', for='nombrePersona') Nombre:
                                            .col-sm-10
                                                input(type="text", class='form-control', pattern='^[a-zA-Z]+', placeholder='Coloque su nombre', name='nombre')
                                        hr
                                        div(class='form-group row') 
                                            label(class='col-sm-2 col-form-label', for='apellidoPersona') Apellido:
                                            .col-sm-10
                                                input(type="text", class='form-control', pattern='^[a-zA-Z]+', placeholder='Coloque su apellido', name='apellido')
                                        hr
                                        div(class='form-group row') 
                                            label(class='col-sm-2 col-form-label', for='provinciaPersona') Provincia:
                                            .col-sm-10
                                                select(class='form-control', name='provincia')
                                                    option(value='Bocas del toro') Bocas del Toro
                                                    option(value='Cocle') Coclé
                                                    option(value='Colon') Colón
                                                    option(value='Chiriqui') Chiriquí
                                                    option(value='Darien') Darién
                                                    option(value='Herrera') Herrera
                                                    option(value='Los Santos') Los Santos 
                                                    option(value='Panama') Panamá
                                                    option(value='Veraguas') Veraguas
                                                    option(value='Comarcas') Comarcas
                                                    option(value='-') Prefiero no decir
                                                    option(value='Extranjero') Extranjero
                                        hr
                                        div(class='form-group row') 
                                            label(class='col-sm-2 col-form-label', for='correoPersona') Correo:
                                            .col-sm-10
                                                input(type='email', class='form-control', placeholder='example@gmail.com', name='email')
                                        hr.divisor
                                        h5 Establezca su contraseña:
                                        div(class='form-group row has-feedback') 
                                            label(class='col-sm-3 col-form-label', for='contrasena') Contraseña:
                                            .col-sm-8
                                                input(type='password', id='pass1', class='form-control pass', placeholder='Escriba su contraseña', name='password')
                                            .col-sm-1
                                                span(toggle="#pass1" class="fa fa-fw fa-eye toggle-password") 
                                        hr
                                        div(class='form-group row has-feedback')
                                            label(class='col-sm-3 col-form-label', for='contrasena2') Reescriba la contraseña:
                                            .col-sm-8
                                                input(type='password', id='pass2', class='form-control pass', placeholder='Reescriba su contraseña', name='passwordagain')
                                            .col-sm-1
                                                span(toggle="#pass2" class="fa fa-fw fa-eye toggle-password") 
                                        div(class='form-group row')
                                            .col-sm-12.d-flex.justify-content-end
                                                input(class='btn btn-primary', type='submit', value='Registrarme')
block scripts 
    script(src="/js/acciones.js")
    script(src="/js/archivos.js")