extends basic.pug
block header
  link(rel="stylesheet", href="/css/pago.css")
block content
    .container    
      .row(class="mt-4 info mb-4")
        div(class='col-sm-12')
          h4 Proceso de Reservaci칩n:
        div(class="col-sm-12 col-md-4 col-lg-4 col-xl-4")
          button( class='btn btn-info w-100', onclick= 'window.history.back();') 
            i(class="fa fa-arrow-circle-left") 
              span Regresar a la actividad
      .row
        div(class='col-sm-12 col-md-4 col-lg-4 mt-2')
          img(src="/css/logo.png", alt="Logo", class='w-100 logo mb-2')            
        div(class='col-sm-12 col-md-8 col-lg-8 mb-3')
          .card
            .card-header
              span(class='fa fa-cc-paypal fa-1x top')  Compra seguro en PanamaTrips con PayPal
            .card-body
              .container
                .row
                  div(class='col-sm-12 col-md-4 col-lg-4')
                    img(src="/"+actividad.imagenes[0], alt="Logo", class='w-100 logo') 
                  div(class='col-sm-12 col-md-8 col-lg-8')
                    input#idusuario(name="usuario" type="hidden" value=id)
                    input#actividad(name="actividad" type="hidden" value=idactividad)
                    h5 Actividad:
                    p#nombre #{actividad.nombreact}
                    h5 Compa침ia:
                    p #{actividad.compania}
                    h5 Descripci칩n:
                    p#descripcion #{actividad.descripcion}
                    h5 Precio:
                    p#precio #{actividad.precio} 
                    h5 Condici칩n:
                    p #{actividad.secprecio}
                    h5 Cantidad de Personas:
                    p#cantidadper #{personas}
                    h5 Fecha de Inicio:
                    p#fechaI #{fechaI}
                    h5 Fecha de Salida:
                    p#fechaS #{fechaS}
                    //input(id='cantidadper', type="number", name="cantidad", min='1', value='1')
                    
                  div(class='col-sm-12 d-flex justify-content-center mt-4 mb-1')
                        input(type="radio" name="payment-option" value="paypal" checked="true")
                        img(src="/css/paypal-mark.jpg" alt="Pague con PayPal")
                  div(class='col-sm-12 d-flex justify-content-center')
                        input(type="radio" name="payment-option" value="card")
                        img(src="/css/card-mark.png" alt="Se aceptan Visa, MasterCard, American Express", class='mw-100', height='48px')
                  div(class='col-sm-12 d-flex justify-content-center mt-4')
                      #paypal-button-container
                          #card-button-container.hidden
                            button.btn.btn-primary 
                              span(class='fa fa-cc-paypal fa-1x')  Continuar
block scripts
  script(src="https://www.paypalobjects.com/api/checkout.js")
  script(src="/js/paypal.js")
           
